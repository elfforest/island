(require 'cl-lib    nil :noerror)
(require 'xdg       nil :noerror)

;; Пути у home папкам
(defconst +desktop_dir+      (xdg-user-dir "DESKTOP"    ))
(defconst +download_dir+     (xdg-user-dir "DOWNLOAD"   ))
(defconst +templates_dir+    (xdg-user-dir "TEMPLATES"  ))
(defconst +publicshare_dir+  (xdg-user-dir "PUBLICSHARE"))
(defconst +documents_dir+    (xdg-user-dir "DOCUMENTS"  ))
(defconst +music_dir+        (xdg-user-dir "MUSIC"      ))
(defconst +pictures_dir+     (xdg-user-dir "PICTURES"   ))
(defconst +videos_dir+       (xdg-user-dir "VIDEOS"     ))

;; Личные данные
(defconst +lastNmae+ "Ryazansev")
(defconst +firsName+ "Vladimir")
(defconst +name+ (concat +firsName+ " " +lastNmae+))
(defconst +mail+ "361elfforest@gmail.com")

;; подключение путей настроек
(defconst +user-emacs-directory+ (file-name-directory load-file-name))
(defconst +user-emacs-core+ (expand-file-name "core" +user-emacs-directory+))


;; добавить каталоги в `load-path' Emacs
(add-to-list 'load-path +user-emacs-core+)
